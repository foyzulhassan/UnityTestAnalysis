		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.7.12</version>
		</dependency>	

		<dependency>
			<groupId>org.gitective</groupId>
			<artifactId>gitective-core</artifactId>
